<Page x:Class="eDziennik.Pages.GradesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:eDziennik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="423" d:DesignWidth="596"
      Title="GradesPage"
      Background="White">

    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="339" Margin="0,15,0,0" VerticalAlignment="Top" Width="573"/>
        <Button Content="Edytuj ocenę" HorizontalAlignment="Left" Margin="283,378,0,0" VerticalAlignment="Top" Width="80" Height="25" BorderBrush="#FF9F9F9F"/>
        <Button Content="Dodaj ocenę" HorizontalAlignment="Left" Margin="385,378,0,0" VerticalAlignment="Top" Width="80" Height="25" RenderTransformOrigin="0.454,-0.164" BorderBrush="#FF9F9F9F" Command="{Binding AddGradeCmd}"/>
        <Button Content="Powrót" HorizontalAlignment="Left" Margin="483,378,0,0" VerticalAlignment="Top" Width="74" Height="25" RenderTransformOrigin="1.128,0.508" BorderBrush="#FF9F9F9F" Command="{Binding ReturnCmd}"/>
    </Grid>
</Page>
